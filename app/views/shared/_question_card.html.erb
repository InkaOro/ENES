<div class="container">
  <div class="row justify-content-center">
    <div class="question-wrapper mb-5 p-3 col-8">
      <div class="container">
          <div class="question-card p-3 text-size mb-3">
            <%= question.question_content.gsub(/\n/, '<br />').html_safe %>
          </div>

        <p class="text-white">Choose your answer:</p>

        <%= form.input :question_id, as: :hidden %>

        <%= form.input :answer_id, item_label_class: 'answer-display p-2', collection: question.answers.shuffle.map {
          |answer| [answer.content, answer.id]
          }, as: :radio_buttons, label: '', required: false %>

      </div>
    </div>
  </div>
</div>
