<div class="container">
  <div class="row justify-content-center">
    <div class="question-wrapper mb-5 p-4 bg-light col-8">
      <h1 class= "text-center mb-3">Results</h1>
      <div class="container">

        <% questions.each do |question| %>
        <div class="card alert-success mb-3 rounded-pill shadow p-3">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div class="form-check">
              <%= question.qid %>. <%= question.question_content %>
            </div>
            <span class="text-success fs-5 ms-5"><i class="fas fa-check-circle"></i></span>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
