<div class="container">
  <div class="row justify-content-center">
    <div class="question-wrapper mb-5 p-4 bg-secondary col-8">
      <h1 class= "text-center mb-3">Results</h1>
      <div class="container">

        <% test_answers.each_with_index do |test_answer, index| %>
        <div class="card <%= test_answer.correct ? 'text-success' : 'text-danger' %> mb-3 rounded-pill shadow p-3">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div class="form-check">
              <%= index + 1 %>. <%= test_answer.question.question_content %>
            </div>
              <p><%= test_answer.answer_content %></p>
              <% if test_answer.correct %>
                <span class="text-success fs-5 ms-5"><i class="fas fa-check-circle"></i></span>
              <% else %>
              <span class="text-danger fs-5 ms-5"><i class="fas fa-times"></i></span>
              <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
