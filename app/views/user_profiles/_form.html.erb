<div class="container">
  <div class="row justify-content-center">
    <div class="form-control form-control-profile">
      <%= simple_form_for @user_profile do |f| %>
        <%= f.input :first_name, label_html: { class: "white-label text-capitalize" }, placeholder: "🧑‍🎓 Please enter your first name." %>
        <%= f.input :last_name, label_html: { class: "white-label text-capitalize" }, placeholder: "🧑‍🎓 Please enter your last name." %>
        <%= f.input :school_name, label_html: { class: "white-label text-capitalize" }, placeholder: "🏫 Please enter the school you attend." %>
        <%= f.input :school_year, label_html: { class: "white-label text-capitalize" }, placeholder: "🏫 Please select your current grade.", collection: UserProfile::SCHOOL_YEAR  %>
        <%= f.input :main_subject, label_html: { class: "white-label text-capitalize" }, placeholder: "📚 Please select your main subject.", collection: Subject.all %>
        <%= f.input :specific_subject_a, label_html: { class: "white-label text-capitalize" }, placeholder: "📚 Please select your first specific subject.", collection: Subject.all %>
        <%= f.input :specific_subject_b, label_html: { class: "white-label text-capitalize" }, placeholder: "📚 Please select your second specific subject.", collection: Subject.all %>
        <%= f.input :optional_subject, label_html: { class: "white-label text-capitalize" }, placeholder: "📚 Please select your optional subject.", collection: Subject.all %>
        <%= f.input :photo, as: :file, label_html: { class: "white-label text-capitalize" }, placeholder: "📷 Please upload your profile pic." %>
        <div class="d-flex justify-content-center">
          <%= f.button :submit, class: "btn btn-black btn-main text-capitalize" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
